{
  "manifest_version": 2,
  "name": "PerfectPixel by WellDoneCode",
  "version": "1.12",
  "description": "The extension help develop your websites with per pixel accuracy!",
  "background": {
      "scripts": [
          "jquery-1.6.2.min.js",
          "pp-shared.js",
          "storage/filemanager.js",
          "fancy-settings/source/lib/store.js",
          "background.js"
      ]
  },
  "web_accessible_resources":[
      "images/noise.jpg",
      "icons/16.png"
  ],
  "options_page": "fancy-settings/source/index.html",
  "browser_action": {
    "default_icon": "icons/icon.png"
  },
  "icons": {"16": "icons/16.png",
           "48": "icons/48.png",
          "128": "icons/128.png" },
  "permissions": [
      "tabs", "<all_urls>", "unlimitedStorage"
  ]
}